{
    "compilerOptions": {
        "module": "ES2020",
        "moduleResolution": "node",
        "target": "es6",
        "lib": ["DOM", "ES2020"],
        "outDir": "dist/esm",
        "tsBuildInfoFile": ".build/tsconfig.tsbuildinfo.esm",
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "rootDir": "src"
    },
    "include": ["src"],
    "exclude": ["**/node_modules", "src/__tests__"]
}
